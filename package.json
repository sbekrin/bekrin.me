{
  "name": "bekrin.me",
  "version": "2.1.0",
  "description": "Source code of bekrin.me",
  "homepage": "http://bekrin.me",
  "repository": "https://github.com/sbekrin/bekrin.me",
  "author": "Sergey Bekrin <sergey@bekrin.me>",
  "license": "UNLICENSED",
  "scripts": {
    "start": "next start",
    "build": "next build",
    "preexport": "yarn build",
    "export": "next export",
    "dev": "next",
    "lint": "eslint --ignore-path .gitignore .",
    "test": "yarn lint"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "babel-plugin-root-import": "^6.1.0",
    "babel-plugin-styled-components": "^1.8.0",
    "eslint": "^5.6.1",
    "eslint-config-prettier": "^3.1.0",
    "eslint-plugin-prettier": "^3.0.0",
    "husky": "^1.1.1",
    "lint-staged": "^7.3.0",
    "moment": "^2.22.2",
    "prettier": "^1.14.3",
    "prop-types": "^15.6.2",
    "webpack": "4.20.2"
  },
  "dependencies": {
    "next": "^7.0.1",
    "react": "^16.5.2",
    "react-dom": "^16.5.2",
    "react-ga": "^2.5.3",
    "styled-components": "^3.4.10"
  },
  "babel": {
    "presets": [
      "next/babel"
    ],
    "plugins": [
      "styled-components",
      "root-import"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "prettier",
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error"
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "proseWrap": "always"
  },
  "husky": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,json}": [
      "prettier --write",
      "git add"
    ]
  }
}
