{
  "name": "bekrin.me",
  "version": "2.1.0",
  "description": "Source code of bekrin.me",
  "homepage": "http://bekrin.me",
  "repository": "https://github.com/sergeybekrin/bekrin.me",
  "main": "./src/pages/index.js",
  "author": "Sergey Bekrin <sergey@bekrin.me>",
  "license": "UNLICENSED",
  "scripts": {
    "start": "next start",
    "build": "next build",
    "preexport": "npm run build",
    "export": "next export",
    "dev": "next",
    "lint": "eslint *.js components pages media",
    "test": "npm run lint",
    "precommit": "lint-staged",
    "deploy": "gh-pages-travis"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.1",
    "babel-plugin-root-import": "^5.1.0",
    "babel-plugin-styled-components": "^1.5.0",
    "case-sensitive-paths-webpack-plugin": "^2.1.1",
    "eslint": "^4.17.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-prettier": "^2.6.0",
    "gh-pages-travis": "^1.0.4",
    "husky": "^0.14.3",
    "lint-staged": "^6.0.1",
    "moment": "^2.20.1",
    "prettier": "^1.10.2",
    "prop-types": "^15.6.0",
    "webpack": "^3.11.0"
  },
  "dependencies": {
    "next": "^5.0.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-ga": "^2.4.1",
    "styled-components": "^3.1.6"
  },
  "babel": {
    "presets": ["next/babel"],
    "plugins": [
      [
        "babel-plugin-styled-components",
        { "ssr": true, "displayName": true, "preprocess": false }
      ],
      ["babel-plugin-root-import", { "rootPathSuffix": "./" }]
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "prettier",
    "plugins": ["prettier"],
    "rules": {
      "prettier/prettier": "error"
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "lint-staged": {
    "*.{js,json}": ["prettier --write", "git add"]
  }
}
