{
  "name": "bekrin.me",
  "version": "2.1.0",
  "description": "Source code of bekrin.me",
  "homepage": "http://bekrin.me",
  "repository": "https://github.com/sergeybekrin/bekrin.me",
  "main": "./src/pages/index.js",
  "author": "Sergey Bekrin <sergey@bekrin.me>",
  "license": "UNLICENSED",
  "scripts": {
    "start": "next start",
    "build": "next build",
    "preexport": "npm run build",
    "export": "next export",
    "dev": "next",
    "lint": "eslint *.js components pages media",
    "test": "npm run lint",
    "precommit": "lint-staged",
    "deploy": "gh-pages-travis"
  },
  "lint-staged": {
    "*.{js,json}": ["prettier --write", "git add"]
  },
  "devDependencies": {
    "babel-eslint": "^8.0.2",
    "babel-plugin-root-import": "^5.1.0",
    "babel-plugin-styled-components": "^1.3.0",
    "eslint": "^4.11.0",
    "eslint-config-prettier": "^2.7.0",
    "eslint-plugin-prettier": "^2.3.1",
    "gh-pages-travis": "^1.0.4",
    "husky": "^0.14.3",
    "lint-staged": "^5.0.0",
    "moment": "^2.19.2",
    "prettier": "^1.8.2",
    "prop-types": "^15.6.0",
    "webpack": "^3.8.1"
  },
  "dependencies": {
    "next": "^4.1.4",
    "react": "^16.1.0",
    "react-dom": "^16.1.0",
    "react-ga": "^2.3.5",
    "styled-components": "^2.2.3"
  },
  "babel": {
    "presets": ["next/babel"],
    "plugins": [
      [
        "babel-plugin-styled-components",
        {
          "ssr": true
        }
      ],
      [
        "babel-plugin-root-import",
        {
          "rootPathSuffix": "./"
        }
      ]
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "prettier",
    "plugins": ["prettier"],
    "rules": {
      "prettier/prettier": "error"
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
