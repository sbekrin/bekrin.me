{
  "name": "bekrin.me",
  "version": "2.1.0",
  "description": "Source code of bekrin.me",
  "homepage": "http://bekrin.me",
  "repository": "https://github.com/sbekrin/bekrin.me",
  "author": "Sergey Bekrin <sergey@bekrin.me>",
  "license": "UNLICENSED",
  "scripts": {
    "now-build": "yarn lint && next build && next export -o dist",
    "lint": "eslint .",
    "dev": "next"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "babel-plugin-root-import": "^6.1.0",
    "babel-plugin-styled-components": "^1.10.0",
    "eslint": "^5.12.1",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^2.0.0",
    "lint-staged": "^8.1.0",
    "moment": "^2.23.0",
    "prettier": "^1.16.0",
    "prop-types": "^15.6.2",
    "webpack": "4.28.4"
  },
  "dependencies": {
    "next": "^9.0.0",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-ga": "^2.5.6",
    "styled-components": "^4.1.3"
  },
  "babel": {
    "presets": [
      "next/babel"
    ],
    "plugins": [
      "styled-components",
      "root-import"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "prettier",
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error"
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "proseWrap": "always"
  },
  "husky": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,json}": [
      "prettier --write",
      "git add"
    ]
  }
}
