{
  "name": "bekrin.me",
  "version": "2.1.0",
  "description": "Source code of bekrin.me",
  "homepage": "http://bekrin.me",
  "repository": "https://github.com/sergeybekrin/bekrin.me",
  "main": "./src/pages/index.js",
  "author": "Sergey Bekrin <sergey@bekrin.me>",
  "license": "UNLICENSED",
  "scripts": {
    "start": "next start",
    "build": "next build",
    "preexport": "yarn build",
    "export": "next export",
    "dev": "next",
    "lint": "eslint *.js components pages media",
    "test": "yarn lint",
    "precommit": "lint-staged",
    "deploy": "gh-pages-travis"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.2",
    "babel-plugin-root-import": "^6.1.0",
    "babel-plugin-styled-components": "^1.5.1",
    "eslint": "^5.0.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-prettier": "^2.6.0",
    "gh-pages-travis": "^1.0.4",
    "husky": "^0.14.3",
    "lint-staged": "^7.0.5",
    "moment": "^2.22.1",
    "prettier": "^1.12.1",
    "prop-types": "^15.6.1",
    "webpack": "^4.12.1"
  },
  "dependencies": {
    "next": "^6.0.0",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-ga": "^2.5.0",
    "styled-components": "^3.2.6"
  },
  "babel": {
    "presets": ["next/babel"],
    "plugins": [
      [
        "babel-plugin-styled-components",
        {
          "ssr": true,
          "displayName": true,
          "preprocess": false
        }
      ],
      [
        "babel-plugin-root-import",
        {
          "rootPathSuffix": "./"
        }
      ]
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "prettier",
    "plugins": ["prettier"],
    "rules": {
      "prettier/prettier": "error"
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "lint-staged": {
    "*.{js,json}": ["prettier --write", "git add"]
  }
}
