@import '~styles/palette.styl'
@import '~styles/variables.styl'

:root
	-webkit-font-smoothing antialiased
	font 100%/1.5 sans-serif
	box-sizing border-box
	min-width 320px
	min-height 100%
	cursor default
	display flex
	padding 0
	margin 0

*,
*::before,
*::after
	box-sizing inherit
	font-family inherit
	font-size inherit
	margin 0

::selection
	background-color #B3D4FC
	text-shadow none

body,
[data-approot]
	display flex
	flex 1

body
	font-size $base-font-size
	overflow visible
