@import '../styles/variables.styl'

.profile-card
	margin 10vmin 0
	align-items center
	font-size 54px
	display flex

	&__left-column
		margin-right $layout-horizontal-spacing
		text-align right
		flex 1

	&__right-column
		flex 2

	&__image
		pointer-events none
		border-radius 50%

	&__title
		max-width 460px
		font-family Helvetica, Arial, sans-serif
		letter-spacing -3.24px
		position relative
		font-weight 700
		margin 0
		color #2e2e2e