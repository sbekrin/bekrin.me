{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "globals": {
    "__DEV__": true,
    "__PROD__": true,
    "__LAST_COMMIT_DATE__": true
  },
  "env": {
    "browser": true,
    "node": true
  },
  "plugins": [
    "react",
    "jsx-a11y",
    "import"
  ],
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "webpack/eslint.js"
      }
    }
  },
  "rules": {
    "array-bracket-spacing": [ "error", "always" ],
    "arrow-parens": [ "error", "always" ],
    "comma-dangle": [ "error", "never" ],
    "indent": [ "error", 4 ],
    "import/extensions": [ "error", { "js": "never" } ],
    "import/no-named-as-default": "off",
    "import/no-extraneous-dependencies": [ "error", { "devDependencies": [ "!webpack/**/*.js", "!server.js" ]}],
    "import/order": [ "error", { "newlines-between": "never", "groups": [ "builtin", "external", "internal", "parent", "sibling", "index" ] }],
    "import/prefer-default-export": "off",
    "jsx-a11y/html-has-lang": "off",
    "no-underscore-dangle": "off",
    "react/jsx-filename-extension": [ 1, { "extensions": [ ".js", ".jsx" ] }],
    "react/jsx-indent": [ "error", 4 ],
    "react/jsx-indent-props": [ "error", 4 ],
    "space-before-function-paren": [ "error", "always" ]
  }
}
